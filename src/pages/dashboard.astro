---
import Layout from "@/layouts/Layout.astro";
import { Card } from "@/components/ui/card";
import { Flame, List, Brain, User } from "lucide-react";

export const prerender = true;

const navigationCards = [
  {
    title: "Generuj fiszki",
    description: "Twórz nowe fiszki z pomocą sztucznej inteligencji",
    icon: Flame,
    href: "/flashcards/generate",
    color: "text-primary",
  },
  {
    title: "Twoje fiszki",
    description: "Przeglądaj i zarządzaj swoimi fiszkami",
    icon: List,
    href: "/flashcards",
    color: "text-blue-500",
  },
  {
    title: "Nauka",
    description: "Rozpocznij sesję nauki z wykorzystaniem spaced repetition",
    icon: Brain,
    href: "/flashcards/practice",
    color: "text-purple-500",
  },
  {
    title: "Profil",
    description: "Zarządzaj swoim kontem i ustawieniami",
    icon: User,
    href: "/profile",
    color: "text-gray-500",
  },
];
---

<Layout title="Dashboard - 10x Cards">
  <div class="flex flex-col gap-6">
    <div class="space-y-2">
      <h1 class="text-4xl font-bold" transition:name="page-title">Witaj!</h1>
      <p class="text-muted-foreground">Co chcesz dzisiaj zrobić?</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {
        navigationCards.map(({ title, description, icon: Icon, href, color }) => (
          <a
            href={href}
            class="group transition-transform duration-200 hover:scale-[1.02] active:scale-[0.98]"
            transition:name={`nav-card-${title}`}
          >
            <Card className="h-full p-6 group-hover:border-primary/50">
              <div class="flex items-start gap-4">
                <div class={`rounded-full p-2 border ${color}`}>
                  <Icon className="h-6 w-6" />
                </div>
                <div class="space-y-1">
                  <h2 class="text-xl font-semibold">{title}</h2>
                  <p class="text-muted-foreground">{description}</p>
                </div>
              </div>
            </Card>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
